{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "",
      "program": "${workspaceFolder}/node_modules/.bin/jest",
      "args": [
        "--collectCoverage=false",
        "--colors",
        "--runInBand",
        "--runTestsByPath",
        "${relativeFile}",
        "--testPathPattern=${fileDirname}",
      ],
      "outputCapture": "std",
      "internalConsoleOptions": "openOnSessionStart"
    }
  ]
}
